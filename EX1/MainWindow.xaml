<Window x:Class="EX1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX1"
        mc:Ignorable="d"
        Title="EX1" Height="400" Width="410">
    <Grid>
        <TextBox x:Name="FirstStringTextBox" VerticalAlignment="Top" HorizontalAlignment="Center" Width="380" Height="100" Margin="0 10 0 0" Text="Первая строка или вторая строка это как посмотреть"/>
        <TextBox x:Name="SecondStringTextBox" VerticalAlignment="Top" HorizontalAlignment="Center" Width="380" Height="100" Margin="0 115 0 0" Text="Вторая строка или первая"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="380" Height="50" Margin="0 0 0 10" Content="CALCULATE" Click="ProceedExerciseTask"/>
    </Grid>
</Window>
